user-agent = "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/98.0.4758.102 Safari/537.36"

# how may times to attempt the request in case of failure
retry = 5

# how long to wait between retries
retry-delay = 5

# follow redirects
location

# request compressed data and decompress
compressed

# create directories when using `-o`
create-dirs

# auto set the previous location if redirected
referer = ";auto"

# exit with non-zero exit codes in case of failure
fail

connect-timeout = 30
